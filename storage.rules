rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Documentos de mascotas: solo el dueño puede subir/eliminar
    match /documents/{fileName} {
      allow read, write: if request.auth != null && 
        fileName.matches('.*_' + request.auth.uid + '_.*');
    }
    
    // Fotos de mascotas: solo el dueño puede subir/eliminar
    match /photos/{fileName} {
      allow read, write: if request.auth != null && 
        fileName.matches('.*_' + request.auth.uid + '_.*');
    }
    
    // Logos de aliados: lectura pública, escritura solo para administradores
    match /logos/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Reglas por defecto: denegar todo
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
